<MyLayout>:
    id: my_widget
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        padding: 70
        spacing: 30

        GridLayout:
            size_hint_y: None


            cols: 2
            rows: 0
            padding: [20, 30, 20, 30]
            spacing: 10
        Button:
            text: 'audio player'
            size_hint: 0.3, 0.3
            pos: 100, 100
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'audio'
        Button:
            text: 'settings'
            size_hint: 0.3, 0.3
            pos: 50, 50
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'settings'

        Label:
            id: file_label
            text: "Select a file"
            font_color: "ff3333"

        Label:
            id: file_label2
            text: ""
            font_color: "ff3333"    


        FileChooserIconView:
            id: filechooser
            on_selection: my_widget.selected(filechooser.selection)

<PlayAudio>:
    id: playaudio
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 10
        spacing: 10

        Button:
            size_hint: 0.1, 0.1
            pos: 70, 70
            text: 'back'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'upload'

        Label:
            id: file_label3
            text: ""
            font_color: "ff3333"  

        FileChooserIconView:
            id: playsound
            on_selection: playaudio.play_sound(playsound.selection)
            path: "converted_audio/"

<Settings>:
    id: settin
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 10
        spacing: 10
    Button:
        id: voice
        text: "language"
        size_hint: 0.1, 0.1
        pos: 10, 150
        on_parent: drop_content.dismiss()
        on_release: drop_content.open(self)
    DropDown:
        id: drop_content
        on_select: voice.text = f'{args[1]}'
        Button:
            id: btn1
            text: 'en-IN-Wavenet-B'
            size_hint: None, None
            height: 35
            on_release: drop_content.select('en-IN-Wavenet-B')
        Button:
            id: btn3
            text: 'en-GB-Neural2-A'
            size_hint: None, None
            height: 35
            on_release: drop_content.select('en-GB-Neural2-A')
        Button:
            id: btn4
            text: 'en-US-Wavenet-I'
            size_hint: None, None
            height: 35
            on_release: drop_content.select('en-US-Wavenet-I')

    Button:
        id: speed
        text: "speed"
        size_hint: 0.1, 0.1
        pos: 10, 100
        on_parent: drop_content2.dismiss()
        on_release: drop_content2.open(self)
    DropDown:
        id: drop_content2
        on_select: speed.text = f'{args[1]}'
        Button:
            id: btn12
            text: '0.5'
            size_hint: None, None
            height: 35
            on_release: drop_content2.select('0.5')
        Button:
            id: btn32
            text: '2.0'
            size_hint: None, None
            height: 35
            on_release: drop_content2.select('2.0')
        Button:
            id: btn42
            text: '1.0'
            size_hint: None, None
            height: 35
            on_release: drop_content2.select('1.0')

    Button:
        text: 'audio player'
        size_hint: 0.07, 0.07
        pos: 300, 500
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'audio'
    Button:
        size_hint: 0.07, 0.07
        pos: 200, 500
        text: 'back'
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'upload'

    
    Button:
        text: 'save'
        size_hint: 0.05, 0.05
        pos: 10,50
        on_press: settin.settings()

        

            




