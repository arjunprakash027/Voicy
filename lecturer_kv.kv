#:import utils kivy.utils

<LecturerLayout>:
    id: lecturer_layout
    canvas:
        Color:
            rgb: utils.get_color_from_hex('#395144')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        padding: 20
        spacing: 10

        Label:
            id: filename_label
            text: "Hello World"
            text_size: None, None

            size_hint_y: None
            size_hint_x: None
            height: 100
            width: root.width-40

            color: utils.get_color_from_hex('#AA8B56')
            bold: True
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#4E6C50')
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:
            orientation: "vertical"
            size: root.width, 500
            padding: 30
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#4E6C50')
                Rectangle:
                    size: self.size
                    pos: self.pos


            FileChooserIconView:
                id: filechooser
                on_selection: lecturer_layout.selected(filechooser.selection)


        GridLayout:
            size_hint_y: None



            cols: 2
            rows: 0
            padding: [20, 30, 20, 30]
            spacing: 10

            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#4E6C50')
                Rectangle:
                    size: self.size
                    pos: self.pos


            Button:
                id: openbutton
                text: "open"
                height: 40
                size_hint_y: None
                on_press: lecturer_layout.openfile()

            Button:
                id: speakbutton
                text: "Speak"
                height: 40
                size_hint_y: None
                on_press: lecturer_layout.speakfile()
